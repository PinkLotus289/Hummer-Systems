{
  "info": {
    "name": "HummerSystems API",
    "_postman_id": "hummer-systems-api",
    "description": "Postman коллекция для тестирования HummerSystems API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Send Phone",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/phone/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "phone"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"phone_number\": \"+79991234567\"}"
        }
      }
    },
    {
      "name": "Verify Code",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/verify/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "verify"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"phone_number\": \"+79991234567\", \"code\": \"1234\"}"
        }
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/profile/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "profile"
          ]
        }
      }
    },
    {
      "name": "Use Invite",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/profile/use_invite/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "profile",
            "use_invite"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"invite_code\": \"XYZ789\"}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000"
    },
    {
      "key": "access_token",
      "value": ""
    }
  ]
}